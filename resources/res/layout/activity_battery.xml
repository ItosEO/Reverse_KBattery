<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/topSpace"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="电池续航预测"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topSpace"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/batteryStatusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleText">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/batteryIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/battery_full"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">
                        <TextView
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#00796b"
                            android:id="@+id/batteryPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#555555"
                            android:id="@+id/batteryStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="已充满"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/statusIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_charging"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#6b7280"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电池电量"/>
                    <ProgressBar
                        android:id="@+id/batteryProgress"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/progress_bar_gradient"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/usageTimeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batteryStatusCard">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#6b7280"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电池使用情况"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:id="@+id/usedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0小时0分钟"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已使用时间"/>
                </LinearLayout>
                <View
                    android:background="#e5e7eb"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:id="@+id/remainingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0小时0分钟"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="预计剩余使用时间"/>
                </LinearLayout>
                <View
                    android:background="#e5e7eb"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:id="@+id/fullRangeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0小时0分钟"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="全程预计续航时间"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/appUsageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usageTimeCard">
            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="#6b7280"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用统计"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/powerCard"
                        android:padding="12dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:minHeight="64dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/k1"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="平均功耗"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:id="@+id/powerValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"/>
                    </LinearLayout>
                    <View
                        android:background="#e5e7eb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/capacityCard"
                        android:padding="12dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:minHeight="64dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/k1"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电池容量"/>
                            <TextView
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333333"
                                android:id="@+id/batteryCapacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4000 mAh"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:background="#e5e7eb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="64dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/k1"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="上次充满时间"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:id="@+id/lastFullChargeTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未记录"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
