<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:id="@+id/toolbar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:elevation="0dp"
        android:layout_marginHorizontal="16dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="18dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/k1"
                    android:contentDescription="应用图标"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KBattery"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="版本 V1.18"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:weightSum="2">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/author_card"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/zuozhe1"/>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="出品人员"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/donate_card"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/aifadian"/>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="前往捐赠"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="12dp"
                android:weightSum="2">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/manual_card"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_star_border_24"/>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="使用手册"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/feedback_card"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/fankui"/>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="提交反馈"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="12dp"
                android:weightSum="2">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/update_log_card"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/outline_circle_notifications_24"/>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="更新日志"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/qq_group_card"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/qq"/>
                        <TextView
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="加入群聊"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
